extends extends/layout



block content

	header.b-header-3
		.b-header-3__item
			.b-header-3__logo
		.b-header-3__item
			nav.b-header-3__nav
				.b-header-3__nav-item
					a.b-header-3__nav-link( href="https://resumedone.io/onboard/start" ) Templates
				.b-header-3__nav-item
					a.b-header-3__nav-link( href="https://resumedone.io/onboard/start" ) Log In
				.b-header-3__nav-item
					a.b-header-3__nav-btn( href="https://resumedone.io/onboard/start" ) Get Started

	.b-hero-3
		.b-hero-3__item.b-hero-3__item_content
			section.b-hero-3__content
				img.b-hero-3__heading( src="media/img/b-hero-3/heading.png" alt="Impressive Resumes Easy Online Builder" )

				ul.b-hero-3__list
					li.b-hero-3__list-item
						p.b-hero-3__list-text Professional out-of-the-box resumes, instantly generated by the most advanced resume builder technology available.
					li.b-hero-3__list-item
						p.b-hero-3__list-text Effortless crafting. Real-time preview &amp; pre-written resume examples. Dozens of HR-approved resume templates.
					li.b-hero-3__list-item.b-hero-3__list-item_last
						p.b-hero-3__list-text Land your dream job with the perfect resume employers are looking for!

				.b-hero-3__options
					.b-hero-3__options-item
						a.b-hero-3__btn( href="https://resumedone.io/onboard/start" )
							span.b-hero-3__btn-inner Create my CV

					.b-hero-3__options-item
						a.b-hero-3__scroll( href="https://resumedone.io/onboard/start" )
							span.b-hero-3__scroll-text Scroll

		a.b-hero-3__item.b-hero-3__item_img( href="https://resumedone.io/onboard/start" )



append scripts

	script(
		src="dist/js/specific/app.js" )