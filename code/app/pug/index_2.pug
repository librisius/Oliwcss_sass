extends extends/layout



block content

	header.b-header-2
		.b-header-2__item
			.b-header-2__logo
		.b-header-2__item
			nav.b-header-2__nav
				.b-header-2__nav-item
					a.b-header-2__nav-link( href="https://resumedone.io/onboard/start" ) Templates
				.b-header-2__nav-item
					a.b-header-2__nav-link( href="https://resumedone.io/onboard/start" ) Log In
				.b-header-2__nav-item
					a.b-header-2__nav-btn( href="https://resumedone.io/onboard/start" ) Get Started

	.b-hero-2
		section.b-hero-2__content
			h1.b-hero-2__heading Impressive Resumes Easy Online Builder

			ul.b-hero-2__list
				li.b-hero-2__list-item
					p.b-hero-2__list-text Professional out-of-the-box resumes, instantly generated by the most advanced resume builder technology available.
				li.b-hero-2__list-item
					p.b-hero-2__list-text Effortless crafting. Real-time preview &amp; pre-written resume examples. Dozens of HR-approved resume templates.
				li.b-hero-2__list-item.b-hero-2__list-item_last
					p.b-hero-2__list-text Land your dream job with the perfect resume employers are looking for!

			.b-hero-2__options
				.b-hero-2__options-item
					a.b-hero-2__btn( href="https://resumedone.io/onboard/start" )
						span.b-hero-2__btn-text Create my CV

				.b-hero-2__options-item
					a.b-hero-2__scroll( href="https://resumedone.io/onboard/start" )
						span.b-hero-2__scroll-text Scroll Down

		a.b-hero-2__img-link( href="https://resumedone.io/onboard/start" )
			img.b-hero-2__img( src="media/img/b-hero-2/cv.png" alt="CV Example" )



append scripts

	script(
		src="dist/js/specific/app.js" )