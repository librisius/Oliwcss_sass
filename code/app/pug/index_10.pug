extends extends/layout



block content

	.b-hero.b-hero_style_10
		.b-hero__item.b-hero__item_content

			header.b-header
				.b-header__item
					.b-header__logo

			section.b-hero__content
				.b-hero__heading
					h1.b-hero__heading-text #[span.b-hero__heading-text_highlighted Easy] Online#[br]#[span.b-hero__heading-text_lg CV Builder]
