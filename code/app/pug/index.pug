extends extends/layout



block content

	.b-hero
		.b-hero__item.b-hero__item_content

			header.b-header
				.b-header__item
					.b-header__logo
				.b-header__item
					nav.b-header__nav
						.b-header__nav-item
							a.b-header__nav-link( href="https://resumedone.io/onboard/start" ) Templates
						.b-header__nav-item
							a.b-header__nav-link( href="https://resumedone.io/onboard/start" ) Log In
						.b-header__nav-item
							a.b-header__nav-btn( href="https://resumedone.io/onboard/start" ) Get Started

			section.b-hero__content
				.b-hero__heading
					h1.b-hero__heading-text #[span.b-hero__heading-text_highlighted Impressive] Resumes Easy Online Builder

				ul.b-hero__list
					li.b-hero__list-item
						p.b-hero__list-text Professional out-of-the-box resumes, instantly generated by the most advanced resume builder technology available.
					li.b-hero__list-item
						p.b-hero__list-text Effortless crafting. Real-time preview &amp; pre-written resume examples. Dozens of HR-approved resume templates.
					li.b-hero__list-item.b-hero__list-item_last
						p.b-hero__list-text Land your dream job with the perfect resume employers are looking for!

				a.b-hero__btn( href="https://resumedone.io/onboard/start" )
					span.b-hero__btn-inner
						span.b-hero__btn-inner-2
							span.b-hero__btn-text Create my CV

			a.b-hero__scroll( href="https://resumedone.io/onboard/start" )
				span.b-hero__scroll-text Scroll Down

		a.b-hero__item.b-hero__item_img( href="https://resumedone.io/onboard/start" )
			.b-hero__img( href="https://resumedone.io/onboard/start" )



append scripts

	script(
		src="dist/js/specific/app.js" )