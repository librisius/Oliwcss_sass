extends extends/layout



block content

	.b-template-customization
		.b-template-customization__item.b-template-customization__item_content
			.b-steps
				.b-steps__list
					.b-steps__item.b-steps__item_active
						p.b-steps__text Heading
					.b-steps__item
						p.b-steps__text Experience
					.b-steps__item
						p.b-steps__text Education
					.b-steps__item
						p.b-steps__text Skills
					.b-steps__item
						p.b-steps__text Summary
					.b-steps__item
						p.b-steps__text Finalize
				.b-steps__slider
					.b-steps__slider-bar( style="width: 8.3333333%;" )

			.b-template-customization__content
				.b-template-customization__content-inner
					.b-template-customization__heading
						h1.b-template-customization__heading-text What's the #[span.b-template-customization__heading-text_highlighted best way] for Employers to contact you?
						p.b-template-customization__heading-subtext We suggest including your best email

					.b-template-customization__form.b-template-customization__form_style_2
						.-ol-form-body.-ol-form-body_m_b_sm
							.-ol-row-input
								.-ol-input-wrap.-ol-input-wrap_style_2
									label.-ol-label.-ol-label_style_2
										span.-ol-label-text Full Name
									input.-ol-input.-ol-input_style_2( type="text" placeholder="Nick Johnson" )

							.-ol-row-input
								.-ol-input-wrap.-ol-input-wrap_style_2
									label.-ol-label.-ol-label_style_2
										span.-ol-label-text City
									input.-ol-input.-ol-input_style_2( type="text" placeholder="San Francisco" )

							.-ol-row-input.-ol-row-input_last
								.-ol-input-wrap.-ol-input-wrap_style_2
									label.-ol-label.-ol-label_style_2
										span.-ol-label-text Email
									input.-ol-input.-ol-input_style_2( type="text" placeholder="mail@example.com" )

						button.b-template-customization__btn-next
							span.b-template-customization__btn-next-text Next to Experience



		.b-template-customization__item.b-template-customization__item_img.b-template-customization__item_img_style_3
			.b-template-customization__demo
				.b-template-customization__demo-img
					.b-template-customization__demo-img-inner



append scripts

	script(
		src="dist/js/specific/app.js" )